{
	"name": "hypertube-client",
	"version": "0.1.0",
	"description": "Hypertube.",
	"private": false,
	"author": "Mike Vaskiv <mike@vaskiv.com>",
	"license": "MIT",
	"homepage": "./",
	"main": "public/electron.js",
	"keywords": [
		"Example",
		"React",
		"Electron"
	],
	"scripts": {
		"dev": "npm react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"start": "react-scripts start",
		"pack": "electron-builder --dir",
		"dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"dependencies": {
		"electron": "^3.0.4",
		"electron-devtools-installer": "^2.2.4",
		"electron-is-dev": "^0.3.0",
		"electron-publisher-s3": "^20.17.2",
		"http": "0.0.0",
		"pouchdb": "^7.0.0",
		"pouchdb-find": "^7.0.0",
		"qrcode.react": "^0.8.0",
		"react": "^16.5.2",
		"react-dom": "^16.5.2",
		"react-scripts": "2.0.5"
	},
	"devDependencies": {
		"react-scripts": "^1.1.4",
		"concurrently": "^3.6.0",
		"cross-env": "^5.2.0",
		"electron": "^2.0.3",
		"electron-builder": "^20.18.0",
		"version-bump-prompt": "^4.1.0"
	},
	"build": {
		"appId": "com.mvaskiv.hypertube",
		"compression": "normal",
		"productName": "hypertube-client",
		"directories": {
			"buildResources": "build",
			"output": "dist"
		},
		"mac": {
			"icon": "assets/icon.png",
			"type": "distribution",
			"target": [
				"pkg",
				"dmg",
				"mas"
			],
			"publish": {
				"provider": "s3",
				"bucket": "example-releases",
				"path": "releases"
			},
			"category": "public.app-category.news"
		},
		"mas": {
			"entitlements": "assets/entitlements.mas.plist",
			"entitlementsInherit": "assets/entitlements.mas.inherit.plist",
			"provisioningProfile": "assets/embedded.provisionprofile"
		},
		"win": {
			"target": "nsis",
			"icon": "assets/icon.png",
			"publish": {
				"provider": "s3",
				"bucket": "example-releases",
				"path": "releases"
			}
		},
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				"snap",
				"AppImage"
			],
			"description": "Example",
			"category": "Network;Feed",
			"publish": {
				"provider": "s3",
				"bucket": "example-releases",
				"path": "releases"
			}
		}
	}
}
